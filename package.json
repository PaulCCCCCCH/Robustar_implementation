{
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1"
  },
  "scripts": {
    "prepare": "npm install -g lint-staged prettier && husky install && pip install black"
  },
  "lint-staged": {
    "*.html": "prettier --write --ignore-unknown",
    "*.js": "prettier --write --ignore-unknown",
    "*.css": "prettier --write --ignore-unknown",
    "*.vue": "prettier --write --ignore-unknown",
    "*.json": "prettier --write --ignore-unknown",
    "*.md": "prettier --write --ignore-unknown",
    "*.py": "black"
  }
}
